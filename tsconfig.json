{
	"include": [
		"**/**/*.ts",
		"**/**/*.tsx",
	],
	"exclude": [
		"node_modules",
	],
	"compilerOptions": {
		"outDir": "./out",
        "target": "ES2020",
        "module": "CommonJS",
		"sourceMap": true,
		"strict": true,
		"exactOptionalPropertyTypes": false,
		"useUnknownInCatchVariables": false,
        "alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
        "noImplicitOverride": true,
		"noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictPropertyInitialization": false,
		"experimentalDecorators": true,
	}
}